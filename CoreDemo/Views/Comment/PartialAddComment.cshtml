
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<div class="comment-top">
    <h4>Bir Yorum Yapın</h4>
    <div class="comment-bottom">
        <form  method="post">
            <input class="form-control" type="text" name="CommentUserName" placeholder="Name" required="" id="username">
            <input class="form-control" type="text" name="" placeholder="CommentTitle" required="" id="title">

           

            <textarea class="form-control" name="CommentContent" placeholder="Message..." required="" id="content"></textarea>
            <button type="submit" class="btn btn-primary submit" id="btn1">Submit</button>
        </form>
    </div>
</div><script type="text/javascript">
    $(document).ready(function () {
        $("#btn1").click(function () {
            $.ajax({
                url: '@Url.Action("PartialAddComment", "Comment")',
                type: 'POST',
                dataType: 'html',
                data: { "CommentUserName": $("#username").val(), "CommentTitle": $("#title").val(), "CommentContent": $("#content").val() },

                success: function (data) {

                    alert("Başarıyla yorum yapıldı");
                },
                error: function () {
                    alert("Hata alındı.");
                }
            });
        });
    });
</script>