    @Html.Label("Writer ID")
        @Html.TextBoxFor(x => x.WriterID, new { @class = "form-control" ,@readonly=true })
        <br />
        @Html.Label("Blog ID")
        @Html.TextBoxFor(x => x.BlogID, new { @class = "form-control", @readonly = true })
        <br />
        @Html.Label("Blog Başlığı")
        @Html.TextBoxFor(x => x.BlogTitle, new { @class = "form-control" })
        <br />
        @Html.Label("Blog Thumbnail URL")
        @Html.TextBoxFor(x => x.BlogThumbnailImage, new { @class = "form-control" })
        <br />
        @Html.Label("Blog Görseli")
        @Html.TextBoxFor(x => x.BlogImage, new { @class = "form-control" })
        <br />
        @Html.Label("Blog Kategori")
        @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.cv, new { @class = "form-control" })
        <br />
        @Html.Label("Blog içerik")

        @Html.TextAreaFor(x => x.BlogContent, 13, 3, new { @class = "form-control" })
        <br />
        <br />
        <button class="btn btn-info">Kaydet</button>
