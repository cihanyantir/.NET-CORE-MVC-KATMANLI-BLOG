@using EntityLayer.Concrete
@using System.Globalization;
@model List<Blog>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Blog Posts</h3>
        <div class="inner-sec">
            <!--left-->
            <div class="left-blog-info-w3layouts-agileits text-left">
                <div class="row">

                    @foreach (var item in Model)
                    {
                        <div class="col-lg-4 card">
                            <a href="single.html">
                                <img src="~/CoreBlogTema/web/images/1.jpg" class="card-img-top img-fluid" alt="">
                            </a>
                            <div class="card-body">
                                <ul class="blog-icons my-4">
                                    <li>
                                        <a href="#">
                                            <i class="far fa-calendar-alt"></i>  @(((DateTime)item.CreateDate).ToString("dd-MMM-yyyy"))

                                        </a>
                                    </li>
                                    <li class="mx-2">
                                    <li class="mx-2">
                                        <a href="#">
                                            <i class="far fa-comment"></i> YorumSayisi
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#">
                                            <i class="fas fa-eye"></i> @item.Category.CategoryName 
                                            writer id =@item.WriterID
                                        </a>
                                    </li>

                                </ul>
                                <h5 class="card-title">
                                    <a href="single.html">@item.BlogTitle</a>
                                </h5>
                                <p class="card-text mb-3">@*@item.BlogContent.Substring(0,item.BlogContent.Substring(0,130).LastIndexOf(" ")) ...*@ </p>
                                            <a href="/Blog/BlogReadAll/@item.BlogID/" class="btn btn-primary read-m">Read More</a>
</div>
                        </div>
                    }

                </div>
                <!--//left-->
            </div>
        </div>
    </div>
</section>