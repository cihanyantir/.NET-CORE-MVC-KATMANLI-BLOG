
@model EntityLayer.Concrete.Writer
@{
    ViewData["Title"] = "WriterEditProfileWithImage";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<form class="form-group" method="post" enctype="multipart/form-data">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yazar Profil Güncelleme</h4>

                <div class="forms-sample">
                    <div class="form-group">
                        <label for="exampleInputEmail3">ID</label>
                        @Html.TextBoxFor(x => x.WriterID, new { @class = "form-control" })
                       
                    </div>
                    <div class="form-group">
                        <label for="exampleInputName1">Ad Soyad</label>
                        @Html.TextBoxFor(x => x.WriterName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.WriterName, "", new { @class = "text-danger" })
                        @*<input type="text" class="form-control" id="exampleInputName1" placeholder="Name">
        </div>*@
                    <div class="form-group">
                        <label for="exampleInputEmail3">Şifre</label>
                        @Html.TextBoxFor(x => x.WriterMail, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.WriterMail, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Password</label>
                        @Html.PasswordFor(x => x.WriterPassword, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.WriterPassword, "", new { @class = "text-danger" })
                    </div>

                        <div class="form-group">
                            <label>Yazar Görsel</label>
                            <input type="file" name="WriterImage" />

                        </div>
                        <div class="form-group">
                            <label for="exampleInputCity1">About</label>
                            @Html.TextAreaFor(x => x.WriterAbout, 10, 3, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.WriterAbout, "", new { @class = "text-danger" })
                        </div>

                        <button type="submit" class="btn btn-gradient-primary mr-2">Submit</button>
                        <button class="btn btn-light">Cancel</button>
                    </div>
                </div>
        </div>
    </div>
</form>
